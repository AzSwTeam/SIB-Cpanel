@model SFBCPanel.Models.UsersMangementViewModel

@{
    ViewBag.Title = "UserLogReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="row">
        <!-- Left col -->
        <section class="col-md-12 connectedSortablex">
            <!-- Own Transfer -->
            <div class="box box-info">
                <h2>Customer Log</h2><br />
                <ol class="breadcrumb" style="font-size:medium">
                    Customer Log Report
                </ol>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            @using (Html.BeginForm(new { id = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true)

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Username, new { @class = "col-md-2" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control ", @placeholder = "username", required = true })
                                            @Html.ValidationMessageFor(model => model.Username)
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        <label class="col-md-3"> Login Type</label>

                                        <div class="col-md-2">
                                            <label>
                                                All
                                                @Html.RadioButtonFor(model => model.SuccessfulLogin, "1", new { @class = "flat-red" })
                                            </label>
                                        </div>

                                        <div class="col-md-4">
                                            <label>
                                                Successful Login
                                                @Html.RadioButtonFor(model => model.SuccessfulLogin, "2", new { @class = "flat-red" })
                                            </label>
                                        </div>

                                        <div class="col-md-3">
                                            <label>
                                                Failed Login
                                                @Html.RadioButtonFor(model => model.SuccessfulLogin, "3", new { @class = "flat-red" })
                                            </label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-xs-57 col-xs-offset-4">
                                            <input type="submit" onclick="submitanddisable()" value="Show report" class="btn btn-lg" style="background:#24295E;color:white;font-size:small" />
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
