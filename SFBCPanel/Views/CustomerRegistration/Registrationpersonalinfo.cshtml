@model SFBCPanel.Models.CustomerRegpersonalinfo

@{
    ViewBag.Title = "Registrationpersonalinfo";
}

<div class="box-header with-border">
    <h3 class="box-title my-box-header"></h3>
</div>
<h2>New Customer Registration</h2>
<br />
<ol class="breadcrumb" style="font-size:medium">
    Personal Information
</ol>

<section class="content">
    <div class="row">
        <!-- Left col -->
        <section class="col-md-8 connectedSortable col-md-offset-2">
            <!-- Own Transfer -->
            <div class="box box-info">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-1">
                            <br />
                            @using (Html.BeginForm(new { id = "form" }))
                            {
                                @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                @Html.LabelFor(model => model.Profile, new { @class = "control-label col-md-4" })
                                <div class="col-md-6">
                                    @Html.DropDownListFor(model => model.profileCode, Model.Profiles, "-- Select Profile --", new { @class = "form-control ", @placeholder = "Branch..."})<h4 style="color:red;position:absolute;left:98%;top:-8%">*</h4>
                                    @*@Html.DropDownList("BranchList", (IEnumerable<SelectListItem>)ViewBag.branchList, "-- Select Branch --", new { @class = "form-control ", @placeholder = "Branch..." })*@
                                    @* @Html.EditorFor(model => model.Branch)*@
                                    @Html.ValidationMessageFor(model => model.profileCode)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-4" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control ", @placeholder = "UserName #...", @value = Model.phonenumber, @style = "enabled:false",@readonly="true" })
                                    @Html.ValidationMessageFor(model => model.UserName)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Address, new { @class = "control-label col-md-4" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control ", @placeholder = "User Address #..." })<h4 style="color:red;position:absolute;left:98%;top:-8%">*</h4>
                                    @Html.ValidationMessageFor(model => model.Address)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-4" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control ", @placeholder = "User Email #..." })
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.phonenumber, new { @class = "control-label col-md-4" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.phonenumber, new { @class = "form-control ", @placeholder = "User Phone number #...",@style = "enabled:false",@readonly="true",@value=Model.phonenumber,maxlength = "10" })
                                    @Html.ValidationMessageFor(model => model.phonenumber)
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <div class="col-xs-5 col-xs-offset-5">
                                    <input type="submit" value="Submit" class="btn btn-block btn-flat" />
                                </div>
                            </div>
                        </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>

@*<script>
    document.getElementById("UserName").attributes(read, true);
</script>*@

@if (ViewBag.SuccessMessage != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.SuccessMessage");
        };
    </script>
}