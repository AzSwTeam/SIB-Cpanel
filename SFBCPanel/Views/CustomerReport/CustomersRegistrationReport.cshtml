@model IEnumerable<SFBCPanel.Models.Custreport>

@{
    ViewBag.Title = "Customers Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>

    @*<script src="~/Content/jquery-1.11.3.min.js"></script>*@
    <script src="~/Content/jquery.dataTables.js"></script>
    <link href="~/Content/jquery.dataTables.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable();
        });
    </script>
</header>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <h2>Users Management</h2><br />
                <ol class="breadcrumb" style="font-size:medium">
                    Users Information
                </ol>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <table id="example" class="display nowrap" style="font-size:small">
                            <thead>
                                <tr>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.CustomerID)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.customerfullname)
                                    </th>

                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.CustomerName)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.AccountNumber)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.phonenumber)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.address)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.customeremail)
                                    </th>
                                    @*<th style="font-size:small">
                                    @Html.DisplayNameFor(model => model.lastlogin)
                                </th>*@
                                    @*<th style="font-size:small">
                                    @Html.DisplayNameFor(model => model.lastip)
                                </th>*@
                                    @*<th style="font-size:small">
                                    @Html.DisplayNameFor(model => model.faildlogincount)
                                </th>*@
                                    @*<th style="font-size:small">
                                    @Html.DisplayNameFor(model => model.category)
                                </th>*@
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.createdby)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderBy(item => item.CustomerID))
                                {
                                    <tr>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.CustomerID)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.customerfullname)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.CustomerName)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.AccountNumber)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.phonenumber)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.address)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.customeremail)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.createdby)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <br />
            @using (Html.BeginForm(new { id = "form" }))
            {
                <div class="col-xs-57 col-xs-offset-6" style="position:relative;right:9%">
                    <input type="submit" onclick="submitanddisable()" formaction="@Url.Action("CreatePdf", "CustomerReport")" value="Print report" class="btn btn-lg" style="background:#24295E;color:white;font-size:small" />
                </div>
            }
        </div>
    </div>
</section>