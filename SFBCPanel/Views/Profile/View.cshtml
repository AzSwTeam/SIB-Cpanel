@model IEnumerable<SFBCPanel.Models.Menu>


<header>
    <script src="~/Content/jquery.dataTables.js"></script>
    <link href="~/Content/jquery.dataTables.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                "paging": false,
                "ordering": false,
                "info": false
            });
        });
    </script>

</header>

<section class="content">
    <div class="row">
        <!-- Left col -->
        <section class="col-md-12 connectedSortable">
            <!-- Own Transfer -->
            <div class="box box-info">
                <h2>Profiles Management</h2><br />
                <ol class="breadcrumb" style="font-size:medium">
                    Add New Profile
                </ol>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">

                                    @Html.ValidationSummary(true)

                                    @*<div class="form-group">
                                            @Html.LabelFor(model => model.MenuName, new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(model => model.MenuName, new { @class = "form-control ", @placeholder = "Profile Name #..." })
                                                @Html.ValidationMessageFor(model => model.MenuName)
                                            </div>
                                        </div>*@
                                    <div class="row col-md-12">
                                        <div class="table-responsive text-center">
                                            <table id="example" class="display nowrap" style="font-size:small">
                                                <thead>
                                                    <tr>
                                                        <th style="font-size:small">
                                                            Menu ID
                                                        </th>
                                                        <th style="font-size:small">
                                                            Menu Name
                                                        </th>
                                                        <th style="font-size:small">
                                                            Menu URL
                                                        </th>
                                                        <th style="font-size:small">
                                                            Menu Parent ID
                                                        </th>
                                                        <th style="font-size:small">
                                                            Menu Sub Parent ID
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var page in Model)
                                                    {


                                                        <tr>
                                                            <th style="font-size:small">
                                                                @Html.DisplayFor(x => page.MID)
                                                            </th>
                                                            <th style="font-size:small">
                                                                @Html.DisplayFor(x => page.MenuName)
                                                            </th>
                                                            <th style="font-size:small">
                                                                @Html.DisplayFor(x => page.MenuURL)
                                                            </th>
                                                            <th style="font-size:small">
                                                                @Html.DisplayFor(x => page.MenuParentID)
                                                            </th>
                                                            <th style="font-size:small">
                                                                @Html.DisplayFor(x => page.subMenuParentID)

                                                            </th>
                                                        </tr>

                                                    }
                                                </tbody>
                                            </table>
                                            <br />
                                        </div>
                                    </div>
                                    <br />
                                    <br />
                                    <div class="form-group">
                                        <div class="col-xs-60 col-xs-offset-4">
                                            <input type="submit" onclick="submitanddisable()" formaction="ProfileManagement" value="Back" class="btn btn-lg btn-flat btn-block" style="color:white;font-size:small" />
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </div>
</section>
@if (ViewBag.SuccessMessage != null)
{
    <script type="text/javascript">
                window.onload = function () {
                    alert("@ViewBag.SuccessMessage");
                };
    </script>
}