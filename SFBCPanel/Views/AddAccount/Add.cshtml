        $("#form").submit();
        this.disable = "disable";
    }
</script>

@if (ViewBag.SuccessMessage != null)
{
    @*<script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.SuccessMessage");
            };
        </script>*@
