            </div>


            <!-- Own Transfer -->
            <div class="box box-info">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <div class="info-box-content">
                                <strong>
                                    <span class="info-box-text">Name</span> :
                                </strong>

                                <span class="info-box-text">@ViewBag.name</span>
                            </div>
                            <br />
                            <div class="info-box-content">
                                <strong>
                                    <span class="info-box-text">UserName</span> :
                                </strong>

                                <span class="info-box-text">@ViewBag.username</span>
                            </div>
                            @if (ViewBag.msg != null && ViewBag.msg != "Account not added to this specific users")
                            {
                                <br />
                                <div class="info-box-content">
                                    <strong>
                                        <span class="info-box-text">Account Customer Name</span>
                                    </strong>
                                    <span class="info-box-text">@ViewBag.msg</span>
                                </div>

                            }
                            @using (Html.BeginForm("deleteCustomerAccount", "AddAccount", FormMethod.Post, new { id = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true)

                                    <br />
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Branch, new { @class = "col-md-2" })
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.BranchCode, Model.Branches, null, new { @class = "form-control ", @placeholder = "Branch...", id = "Branch" })
                                            @*@Html.DropDownList("BranchList", (IEnumerable<SelectListItem>)ViewBag.branchList, "-- Select Branch --", new { @class = "form-control ", @placeholder = "Branch..." })*@
                                            @* @Html.EditorFor(model => model.Branch)*@
                                            @Html.ValidationMessageFor(model => model.BranchCode)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Currency, new { @class = "col-md-2" })
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.CurrencyCode, Model.Currencies, "-- Select Currency --", new { @class = "form-control ", @placeholder = "currency...", id = "curr" })
                                            @* @Html.DropDownList("CurrencyList", (IEnumerable<SelectListItem>)ViewBag.CurrencyList, "-- Select Currency --", new { @class = "form-control select2", @placeholder = "Branch..." })*@
                                            @*@Html.EditorFor(model => model.Currency)*@
                                            @Html.ValidationMessageFor(model => model.CurrencyCode)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.AccountType, new { @class = "col-md-2" })
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.AccountTypecode, Model.AccTypes, "-- Select Account Type --", new { @class = "form-control ", @placeholder = "Branch...", id = "acttype" })
                                            @*@Html.DropDownList("AccTypeList", (IEnumerable<SelectListItem>) ViewBag.AccTypesList, "-- Select Account Type --", new {@class = "form-control ", @placeholder = "Branch..."})*@
                                            @*@Html.EditorFor(model => model.AccountType)*@
                                            @Html.ValidationMessageFor(model => model.AccountTypecode)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.AccountNumber, new { @class = "col-md-2" })
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.AccountNumber, new { @class = "form-control ", @placeholder = "Account #...", @maxlength = "7", @id = "accountnumber", @Value = (Model.AccountNumber == null) ? "" : Model.AccountNumber.ToString() })
                                            @Html.ValidationMessageFor(model => model.AccountNumber)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SUBNO, new { @class = "col-md-2" })
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(model => model.SUBNO, new { @class = "form-control", @placeholder = "SUBNO...", @type = "number", @maxlength = "2", @id = "subno", @Value = (Model.SUBNO == null) ? "00" : Model.SUBNO.ToString() })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SUBGL, new { @class = "col-md-2" })
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(model => model.SUBGL, new { @class = "form-control", @placeholder = "SUBGL...", @type = "number", @maxlength = "3", @id = "subgl", @Value = (Model.SUBGL == null) ? "000" : Model.SUBGL.ToString() })
                                        </div>
                                    </div>
                                    <br />

                                    <div class="form-group">
                                        <div class="col-xs-7 col-xs-offset-5">
                                            <input type="submit" value="Check" name="Command" d="Check" class="btn btn-block btn-flat" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @if (ViewBag.msg != null && ViewBag.msg != "Account not added to this specific users")
                                        {
                                            <div class="col-xs-7 col-xs-offset-5">
                                                <input type="submit" value="Delete" name="Command" d="Delete" class="btn btn-block btn-flat" />
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>

