@model IEnumerable<SFBCPanel.Models.ActionsLogViewModel>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>

    @*<script src="~/Content/jquery-1.11.3.min.js"></script>*@
    <script src="~/Content/jquery.dataTables.js"></script>
    <link href="~/Content/jquery.dataTables.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable();
        });
    </script>

    <style>
        body {
            overflow: visible;
        }
    </style>
</header>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <h2>Users Management</h2><br />
                <ol class="breadcrumb" style="font-size:medium">
                    Users Information
                </ol>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <table id="example" class="display nowrap" style="font-size:small">
                            <thead>
                                <tr>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.user_id)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.user_name)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.user_role)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.timedate)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.user_branch)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.action)
                                    </th>

                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.action_on_user)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.user_status)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderBy(item => item.user_id))
                                {
                                    <tr>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.user_id)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.user_name)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.user_role)
                                        </td>
                                        <td style="font-size:smaller">
                                            @Html.DisplayFor(modelItem => item.timedate)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.user_branch)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.action)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.action_on_user)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.user_status)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <br />
                    <div class="box-footer">
                        <section class="row">
                            <div class="col-md-8" style="display:inline-block">
                                @using (Html.BeginForm("CreatePdf", "User", new { id = "form" }))
                                {
                                    <div class="form-group">
                                        <div class="col-xs-57 col-xs-offset-8">
                                            <input type="submit" onclick="submitanddisable()" value="Print" class="btn btn-lg btn-flat btn-block" style="color:white;font-size:small" />
                                        </div>
                                    </div>
                                }
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>