@model SFBCPanel.Models.ServiceUpdateModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <!-- Left col -->
        <section class="col-md-12 connectedSortable">
            <!-- Own Transfer -->
            <div class="box box-info">
                <h2>Edit Service</h2><br />
                <ol class="breadcrumb" style="font-size:medium">
                    Service information
                </ol>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true)

                                <div class="hidden">
                                    @Html.LabelFor(model => model.service_id, new { @class = "hidden" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.service_id, new { @class = "hidden", @placeholder = "ID #..." })

                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.service_name, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.service_name, new { @class = "form-control ", @placeholder = "Name #..." })
                                        @Html.ValidationMessageFor(model => model.service_name)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.service_code, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.service_code, new { @class = "form-control ", @placeholder = "Name #..." })
                                        @Html.ValidationMessageFor(model => model.service_code)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.service_status, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.service_id, Model.statuses, "-- Select Status --", new { @class = "form-control ", @placeholder = "Service Status ..." })

                                        @Html.ValidationMessageFor(model => model.service_id)
                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-xs-57 col-xs-offset-6">
                                        <input type="submit" value="Update" class="btn btn-lg btn-flat btn-block" style="color:white;font-size:small" onclick="submitanddisable()" />
                                    </div>
                                </div>

                            </div>
                            }

                            <div class="form-group">
                                @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-lg btn-primary" })

                            </div>



                        </div>
                    </div>

                </div>
            </div>
        </section>
    </div>
</section>


