@model IEnumerable<SFBCPanel.Models.Servielist>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>

    @*<script src="~/Content/jquery-1.11.3.min.js"></script>*@
    <script src="~/Content/jquery.dataTables.js"></script>
    <link href="~/Content/jquery.dataTables.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable();
        });
    </script>
</header>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- TABLE: LATEST Transactions -->
            <div class="box box-info">
                <h2>Services Management</h2><br />
                <ol class="breadcrumb" style="font-size:medium">
                    Services
                </ol>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-lg-12 col-md-11 col-sm-11">
                        <table id="example" class="display nowrap" style="font-size:small">
                            <thead>
                                <tr>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.service_id)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.name)
                                    </th>

                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.service_code)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.service_status)
                                    </th>
                                    <th style="font-size:small">
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderBy(item => item.service_id))
                                {
                                    <tr>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.service_id)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.service_code)
                                        </td>
                                        <td style="font-size:small">
                                            @Html.DisplayFor(modelItem => item.service_status)
                                        </td>

                                        <td style="font-size:small">
                                            @*@Html.ActionLink("Edit", "Edit", new { id = item.service_id },new { @style="color:black;" }) |*@
                                            @Html.ActionLink("Delete", "Delete", new { id = item.service_id },new { @style="color:black;" })
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>

                    </div>

                    <div class="box-footer">
                        <section class="row">
                            <div class="col-md-8">

                                @using (Html.BeginForm("Add", "Service", FormMethod.Get, new { id = "form" }))
                                {
                                <div class="form-group">
                                    <div class="col-xs-57 col-xs-offset-7">
                                        <input type="submit" onclick="submitanddisable()" value="Create new serivce" class="btn btn-md btn-flat btn-block" style="color:white;font-size:small" />
                                    </div>
                                </div>
                                }
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





@if (ViewBag.SuccessMessage != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.SuccessMessage");
        };
    </script>
}