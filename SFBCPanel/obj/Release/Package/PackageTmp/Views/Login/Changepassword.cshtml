@model SFBCPanel.Models.changepassword

@{
    ViewBag.Title = "Changepassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="login-box">
    <div class="login-box-body my-box">
        <h2>Password Change</h2><br />
        <ol class="breadcrumb" style="font-size:medium">
            Please Change Your Password
        </ol>

        @using (Html.BeginForm(new { id = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(model => model.OldPassword, new
               {
                   @class = "form-control",
                   minlength = "8",
                   maxlength = "20",
                   pattern = "\\[A-Za-z0-9]{8,20}",
                   @placeholder = "Enter Your Old Password",
                   @type = "password"
               })
                    @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(model => model.newPassword, new
               {
                   @class = "form-control",
                   minlength = "8",
                   maxlength = "20",
                   pattern = "\\[A-Za-z0-9]{8,20}",
                   @placeholder = "Enter Your new Password",
                   @type = "password"
               })
                    @Html.ValidationMessageFor(model => model.newPassword, "", new { @class = "text-danger" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(model => model.confrimPassword, new
               {
                   @class = "form-control",
                   minlength = "8",
                   maxlength = "20",
                   pattern = "\\[A-Za-z0-9]{8,20}",
                   @placeholder = "Enter Confirm new Password",
                   @type = "password"
               })
                    @Html.ValidationMessageFor(model => model.confrimPassword, "", new { @class = "text-danger" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    @*<input type="submit" value="Change Password" class="btn btn-primary btn-block btn-flat" onclick="return*@
                            displayprogressmessage(this, 'Changing .....' );" />
                    <div class="col-xs-57 col-xs-offset-6">
                        <input type="submit" value="Update" class="btn btn-lg" onclick="submitanddisable()" style="background:#24295E;width:50%;color:white;font-size:small" onclick="return displayprogressmessage(this, 'Changing .....' );"/>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Content/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Content/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Content/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>

    <script>

        function DisplayProgressMessage(ctl, msg) {

            $(ctl).prop("disabled", true);

            $(ctl).text(msg);



            return true;

        };

    </script>