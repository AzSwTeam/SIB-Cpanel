@model SFBCpanel.Models.UserDetailsModel

@{
    ViewBag.Title = "UsersDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<section class="col-md-12 connectedSortable">
    <!-- Own Transfer -->
    <div class="box box-info">
        <h2>Users Log</h2><br />
        <ol class="breadcrumb" style="font-size:medium">
            Users Log Report
        </ol>
        <br />
        <div class="box-body">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                <label class="col-md-3" style="position:relative;left:3%"> Username or ID</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.user_name, new { @class = "form-control ", @placeholder = "username or ID", required = true })
                                    @Html.ValidationMessageFor(model => model.user_name)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-6 col-md-offset-5">
                                    <input type="submit" onclick="submitanddisable()" value="Show report" class="btn btn-md btn-flat btn-block" style="color:white;font-size:small" />
                                </div>
                            </div>
                        </div>
                    }
                    
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
