@model IEnumerable<SFBCPanel.Models.UsersMangementViewModel>

@{
    ViewBag.Title = "ViewCustomerReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>

    @*<script src="~/Content/jquery-1.11.3.min.js"></script>*@
    <script src="~/Content/jquery.dataTables.js"></script>
    <link href="~/Content/jquery.dataTables.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable();
        });
    </script>
</header>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <!-- TABLE: LATEST Transactions -->
            <div class="box box-info">
                <h2>Customers Report</h2><br />
                <ol class="breadcrumb" style="font-size:medium">
                    Registered Customers Log
                </ol>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-lg-12 col-md-11 col-sm-11">
                        <table id="example" class="display nowrap" style="font-size:small">
                            <thead>
                                <tr>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.Username)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.LoginTime)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.IpAddress)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.userstatus)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.category)
                                    </th>
                                    <th style="font-size:small">
                                        @Html.DisplayNameFor(model => model.UserID)
                                    </th>
                                    <th style="font-size:small">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td style="font-size:small">
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td style="font-size:small">
                                        @Html.DisplayFor(modelItem => item.LoginTime)
                                    </td>
                                    <td style="font-size:small">
                                        @Html.DisplayFor(modelItem => item.IpAddress)
                                    </td>
                                    <td style="font-size:small">
                                        @Html.DisplayFor(modelItem => item.userstatus)
                                    </td>
                                    <td style="font-size:small">
                                        @Html.DisplayFor(modelItem => item.category)
                                    </td>
                                    <td style="font-size:small">
                                        @Html.DisplayFor(modelItem => item.UserID)
                                    </td>
                                    <td style="font-size:small">
                                        @Html.ActionLink("Details", "ViewCustomerDetails", new { CustomerID = item.UserID }, new { @class = "btn btn-block btn-flat ", value = "Details"})
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>