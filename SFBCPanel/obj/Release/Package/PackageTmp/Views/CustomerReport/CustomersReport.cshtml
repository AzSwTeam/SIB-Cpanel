@model SFBCPanel.Models.Custreport

@{
    ViewBag.Title = "CustomersReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <!-- Left col -->
        <section class="col-md-12 connectedSortable">
            <!-- Own Transfer -->
            <div class="box box-info">
                <h2>Customers information</h2><br />
                <ol class="breadcrumb" style="font-size:medium">
                    Customers Report
                </ol>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-10">
                            @using (Html.BeginForm(new { id = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true)

                                    <div class="form-group">
                                        <label class="control-label col-md-4">Username or ID</label>
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(model => model.Branch, new { @class = "form-control ", @placeholder = "..." })
                                        </div>
                                        <div class="col-xs-2">
                                            <input id="loadbutton" value="Load" type="submit" class="btn btn-lg btn-block btn-flat" formaction="@Url.Action("CustomersReportprocess","CustomerReport")" style="color:white;font-size:small" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Branch, new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.BranchCode, Model.Branches, new { @class = "form-control ", @placeholder = "Branch..." })
                                            @Html.ValidationMessageFor(model => model.BranchCode)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CustomerType, new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.CategoryCode, Model.catgories, new { @class = "form-control ", @placeholder = "Branch..." })
                                            @Html.ValidationMessageFor(model => model.CategoryCode)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CustStatus, new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.StatusCode, Model.CustomerStatus, new { @class = "form-control ", @placeholder = "Branch..." })
                                            @Html.ValidationMessageFor(model => model.StatusCode)
                                        </div>
                                    </div>

                                    <div class="col-xs-57 col-xs-offset-6">
                                        <input type="submit" onclick="submitanddisable()" formaction="@Url.Action("CustomersReport","CustomerReport")" value="Submit" class="btn btn-lg btn-block btn-flat"  style="color:white;font-size:small" />
                                    </div>
                                </div>
                            }
                            <br />
                            @using (Html.BeginForm(new { id = "form" }))
                            {
                                <div class="col-xs-57 col-xs-offset-6" style="position:relative;right:9%">
                                    <input type="submit" onclick="submitanddisable()" formaction="@Url.Action("CustomersRegistrationReport", "CustomerReport")" value="Customers Registration Report" class="btn btn-lg btn-block btn-flat" style="color:white;font-size:small" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


