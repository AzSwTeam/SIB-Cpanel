@model IEnumerable<SFBCPanel.Models.Custreport>

<div class="box-header with-border">
    <h3 class="box-title my-box-header"></h3>
</div>
<h2>Reports</h2>
<br />
<ol class="breadcrumb" style="font-size:medium">
    Customers reports
</ol>

<section class="content">
    <div class="row">
        <br />
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="">

                        <div class="text-center">
                            <h4>
                                Customer Report For @if (ViewBag.Branchname != null)
                                {@ViewBag.Branchname}
                            </h4>
                        </div>
                        <div>
                            <div class="col-md-6 ">
                                Date @if (ViewBag.Date != null)
                                {@ViewBag.Date}
                            </div>
                            <div class=" col-md-6 text-right">
                                TIme @if (ViewBag.Time != null)
                                {@ViewBag.Time}
                            </div>
                        </div>
                        <div class="text-center">
                            Total of Customers Registered

                            @if (ViewBag.Total != null)
                            {@ViewBag.Total}

                        </div>
                    </div>
                </div>
                <div class="panel-body">


                    <div class="table-responsive">
                        <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                            @*<table id="dtBasicExample" class="table table-bordered table-hover table-bordered table-striped" cellspacing="0" width="100%">*@
                            <thead style="color: #9F3B3E">
                                <tr>
                                    <th class="th-sm" style="font-size:small">
                                        @Html.DisplayNameFor(model => model.CustomerName)
                                        <i class="fa fa-sort float-right" style="font-size:small" aria-hidden="true"></i>
                                    </th>
                                    <th class="th-sm">
                                        @Html.DisplayNameFor(model => model.CustStatus)
                                        <i class="fa fa-sort float-right" style="font-size:small" aria-hidden="true"></i>
                                    </th>
                                    <th class="th-sm">
                                        @Html.DisplayNameFor(model => model.Branch)
                                        <i class="fa fa-sort float-right" style="font-size:small" aria-hidden="true"></i>
                                    </th>
                                    <th class="th-sm">
                                        @Html.DisplayNameFor(model => model.AccountNumber)
                                        <i class="fa fa-sort float-right" style="font-size:small" aria-hidden="true"></i>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td style="font-size:small">
                                        @Html.DisplayFor(modelItem => item.CustomerName)
                                    </td>

                                    <td style="font-size:small">
                                        @Html.DisplayFor(modelItem => item.CustStatus)
                                    </td>
                                    <td style="font-size:small">
                                        @Html.DisplayFor(modelItem => item.Branch)
                                    </td>
                                    <td style="font-size:small">
                                        @Html.DisplayFor(modelItem => item.AccountNumber)
                                    </td>

                                </tr>
                                }


                            </tbody>
                            <tfoot style="color: #9F3B3E">
                                <tr>
                                    <th style="font-size:small">
                                        Total Customers
                                    </th>
                                    <th style="font-size:small">
                                        @if (ViewBag.Total != null)
                                        {@ViewBag.Total}

                                    </th>
                                    <th>

                                    </th>
                                    <th>

                                    </th>
                                </tr>
                            </tfoot>
                        </table>
                        <div class="box-footer">
                            <p>
                                @using (Html.BeginForm("SavePDF", "CustomerReport"))
                                {
                                    <br />


                                    <div class="form-group">
                                        <div class="col-xs-4 col-xs-offset-5">
                                            <input type="submit" value="Print" style="background-color:#008B3B" class="btn btn-block btn-flat" />
                                        </div>
                                    </div>
                                }
                            </p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

